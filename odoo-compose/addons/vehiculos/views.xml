<!-- Se mostrarán las vistas de form y de tree, en el listado ademas se marcarán de 
color aquellos vehiculos cuyo seguro haya vencido en plazo.-->

<odoo>

    <!-- Definir menu - vistas de modelos-->
    <!-- vista vehiculo-->
    <record id="vehiculo_action" model="ir.actions.act_window">
        <field name="name">Vehiculos</field>
        <field name="res_model">vehiculo.vehiculo</field>
        <field name="view_mode">tree,form</field>
    </record>

<!-- menu categorias-->
    <menuitem id="vehiculo_root_menu" name="Sistema de Gestión de Vehículos" sequence="10"/>
    <menuitem name="Vehiculos" id="vehiculo_menu" parent="vehiculo_root_menu" action="vehiculo_action"/>
</odoo>